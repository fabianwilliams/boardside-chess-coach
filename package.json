  "version": "0.1.0",
  "type": "module",
  "description": "Chess learning SPA with adaptive teaching and dual-perspective game analysis",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:data-validation": "jest tests/data-validation",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fabianwilliams/boardside-chess-coach.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fabianwilliams/boardside-chess-coach/issues"
  },
  "homepage": "https://github.com/fabianwilliams/boardside-chess-coach#readme",
  "dependencies": {
    "chess.js": "^1.4.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/chess.js": "^0.13.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.27",
